{
  "description": "GlusterFS plugin for Docker v1.2",
  "documentation": "https://docs.docker.com/engine/extend/plugins/",
  "entrypoint": [
    "/usr/local/bin/tini",
    "--",
    "/usr/local/bin/docker-volume-glusterfs"
  ],

  "network": {
    "type": "host"
  },
  "mounts": [
    {"type": "bind", "source": "/mnt/volumes", "destination": "/mnt/volumes", "options": ["shared","rw","rbind"]}
  ],

  "interface": {
    "socket": "glusterfs.sock",
    "types": [
      "docker.volumedriver/1.0"
    ]
  },
  "linux": {
    "capabilities": [
      "CAP_SYS_ADMIN"
    ],
    "devices": [
			{
				"name":"fuse",
				"path":"/dev/fuse"
			}
		]
  },
  "propagatedMount": "/mnt/volumes",
  "env": [
    {
      "name": "GFS_VOLUME",
      "description": "volfile-id",
      "settable": [
        "value"
      ],
      "value": ""
    },
    {
      "name": "GFS_SERVERS",
      "description": "comma seperated list of volfile-server",
      "settable": [
        "value"
      ],
      "value": ""
    },
    {
      "name": "LOGFILE",
      "description": "optional location of logfile",
      "settable": [
        "value"
      ],
      "value": ""
    }
  ]
}
